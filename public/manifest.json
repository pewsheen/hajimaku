{
  "name": "Hajimaku",
  "description": "Real-time transcription for YouTube",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "scripting"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://www.youtube.com/watch?v=*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://www.youtube.com/*"]
}
